    "/api/cart/{userId}": {
      "get": {
        "tags": [
          "Cart"
        ],
        "summary": "Get user's cart",
        "description": "Retrieves the cart details for a specific user",
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Returns the user's cart"
          }
        }
      }
    },
    "/api/cart/{userId}/add": {
      "post": {
        "tags": [
          "Cart"
        ],
        "summary": "Add product to cart",
        "description": "Adds a product with a specified quantity to the user's cart",
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          },
          {
            "name": "productId",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          },
          {
            "name": "quantity",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Product added successfully"
          },
          "400": {
            "description": "Invalid request"
          }
        }
      }
    },
    "/api/cart/{userId}/update": {
      "put": {
        "tags": [
          "Cart"
        ],
        "summary": "Update product quantity in cart",
        "description": "Updates the quantity of a specific product in the user's cart",
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          },
          {
            "name": "productId",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          },
          {
            "name": "quantity",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Product quantity updated successfully"
          },
          "400": {
            "description": "Invalid request"
          }
        }
      }
    },
    "/api/cart/{userId}/remove": {
      "delete": {
        "tags": [
          "Cart"
        ],
        "summary": "Remove product from cart",
        "description": "Removes a specific product from the user's cart",
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          },
          {
            "name": "productId",
            "in": "query",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Product removed successfully"
          },
          "404": {
            "description": "Product not found in cart"
